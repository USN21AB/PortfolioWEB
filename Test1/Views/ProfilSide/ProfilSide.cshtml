<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <!--  All snippets are MIT license http://bootdey.com/license -->
    <title>profile with data and skills - Bootdey.com</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="http://netdna.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/ProfilSide.css" rel="stylesheet" />
    
</head>
<body>
    <div class="container">
        <div class="main-body">

            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <input type="image" src="https://i1.sndcdn.com/artworks-Y4bCtXG5t6Czo3cb-1bFYoA-t500x500.jpg" alt="Admin" class="rounded-circle" width="150" />
                                <input type="file" id="my_file" style="display: none;" />
                                <div class="mt-3">
                                    <h4>Kakashi</h4>
                                    <p class="text-secondary mb-1">Full Stack Developer</p>
                                    <p class="text-muted font-size-sm">Bay Area, San Francisco, CA</p>

                                    @using (Html.BeginForm("UploadFile", "ProfilSide", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {

                                        <div>
                                            @Html.TextBox("file", "", new { type = "file" }) <br />

                                            <input type="submit" value="Upload" />

                                        </div>


                                    }
                                </div>
                                <a asp-action="CV"><button class="cvbtn btn btn-primary">Request CV</button></a>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="rowinfo">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Full Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    Kakashi Hatake
                                </div>
                            </div>
                            <hr>
                            <div class="rowinfo">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    bestwaytoagirlsheart_chidori@gmail.com
                                </div>
                            </div>
                            <hr>
                            <div class="rowinfo">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Phone</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    (239) 816-69420
                                </div>
                            </div>
                            <hr>
                            <div class="rowinfo">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Address</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    Bay Area, San Francisco, CA
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="center">
        <div class="center2">
            <a asp-action="CV"><button class="btn btn-primary">CV</button></a>
            <a asp-action="Portefølje"><button class="btn btn-primary">Portfolio</button></a>
        </div>
    </div>

    <script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    
    <script type="text/javascript">

        $("input[type='image']").click(function () {
            $("input[id='my_file']").click();
        });

    </script> 

    <!-- For later  <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">  -->
</body>
</html>