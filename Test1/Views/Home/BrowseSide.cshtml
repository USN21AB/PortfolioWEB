<div class="card text-center">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs justify-content-center">
            <li class="nav-item">
                <a class="nav-link active" aria-current="true" href="#Alt" data-toggle="tab"><i class="nav-item fas fa-globe"> Alt</i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" role="tab" data-toggle="tab" asp-action="SorterListe" asp-route-Type="Kunst" asp-controller="Home" > <i class="nav-item fas fa-image"> Kunst</i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#Musikk" role="tab" data-toggle="tab"> <i class="nav-item fas fa-music"> Musikk</i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#Fotografi" role="tab" data-toggle="tab"> <i class="nav-item fas fa-camera"> Fotografi</i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#Tekst" role="tab" data-toggle="tab"> <i class="nav-item fas fa-pencil-alt"> Tekst</i></a>
            </li>
        </ul>
    </div>

    <div class="tab-content">
        @{
            var antall = 0;
        }
        <div class="row p-3">
            @while (antall < liste.Count)
            {
                    var Innlegg = liste.ElementAt(antall);
                    <div class="col p-2" align="center">
                        <div class="card" style="width: 18rem; height:15rem; overflow: hidden;">
                            <div class="card-body">
                                <h5 class="card-title">@Innlegg.Tittel</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@Innlegg.Kategori</h6>
                                <p class="card-text">@Innlegg.Beskrivelse</p>
                                <a href="#" class="card-link">Besøk</a>
                                <a href="#" class="card-link">Lik</a>
                            </div>
                        </div>
                    </div>
                    antall++;
            }
        </div>
